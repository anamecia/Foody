<div class='container'>
    <h1 class='name'>Hi, <%=@admin.adminname%></h1>

    <h4>Reports:</h4>
    <div class='event-info'>
        <%if @most_popular_host != 0%>
        <p>Most popular host is:</p>
        <%=@most_popular_host%>
        <%end%>

        <%if @inactive_hosts != []%>
            <p>Inactive hosts are:</p>
            <%@inactive_hosts.each do |host|%>
                <li>
                <%=host.hostname%>
                </li>
            <%end%>
        <%end%>

        <%if @inactive_users != []%>
            <p>Inactive users are:</p>
            <%@inactive_users.each do |user|%>
                <li>
                <%=user.username%>
                </li>
            <%end%>
        <%end%>

        <%if @most_popular_category != nil%>
            <p>Most popular category:</p>
            <%=@most_popular_category%>
        <%end%>

        <%if @most_expensive_event!= nil%>
            <p>Most expensive event:</p>
            <%=@most_expensive_event.title%><br>
             <span>Â£</span><%=@most_expensive_event.price%>
        <%end%>
    </div>
</div>
  