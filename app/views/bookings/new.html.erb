
<h1><%=@event.title%></h1>
<p><%=@event.description%></p>
<p>Available Places: <%=@event.places%></p>
<p>Date: <%=@event.date%></p>
<p>Time: <%=@event.time%></p>

<%=form_for @booking do |f|%>
    <%= f.hidden_field :event_id, :value => @event.id%>
    <p>How many places do you want to book?</p>
    <%=f.select :ticket, (1..@places)%>
    <%=f.submit 'Book' %>
<%end%>