<h1><%=@event.title%></h1>
<p>Description: <%=@event.description%></p>
<p>Date: <%=@date%></p>
<p>Time: <%=@time%></p>
<p>Unsold Places: <%=@event.places%></p>
<p>Price: <%=@event.price%></p>
<%if current_host && @users.count != 0%>
    <p>Users</p>
    <ul>
        <%@users.each do |user|%>
            <li><%=user.username%></li>
        <%end%>
    </ul>
<%end%>

<%if !current_host && !current_admin && (@event.places > 0)%>
    <%if current_user%>
    <%=link_to 'Book this event', book_event_path(@event.id)%>
    <%else%>
    <%=link_to 'Book this event', userlogin_path%>
    <%end%>
<%end%>