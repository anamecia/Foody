<div class='container'>
<h1 class="event-title"><%=@event.title%></h1>
<div class="event-info">
<p>Description:</p> <%=@event.description%>
<p>Date:</p> <%=@date%>
<p>Time:</p> <%=@time%>
<p>Unsold Places:</p><%=@event.places%>
<p>Price:</p> <%=@event.price%> <span>Â£</span>
<%if current_host && @users.count != 0%>
    <p>Users</p>
    <ul>
        <%@users.each do |user|%>
            <li><%=user.username%></li>
        <%end%>
    </ul>
<%end%>
</div>

<%if !current_host && !current_admin && (@event.places > 0)%>
    <%if current_user%>
    <%=link_to 'Book this event', book_event_path(@event.id)%>
    <%else%>
    <%=link_to 'Book this event', userlogin_path%>
    <%end%>
<%end%>
</div>