<div class='container row d-flex justify-content-center'>
    <div class='col-2'></div>

    <div class='jumbotron col'>
        <%=form_tag hosts_path do %>
            <div class ="form-group">
                <%=label :host, :hostname%>
                <%=text_field :host, :hostname, :class=>"form-control"%>
            </div>
            <div class ="form-group">
                <%=label :host, :password%>
                <%=password_field :host, :password, :class=>"form-control"%>
            </div>
            <div class ="form-group">
                <%=label :host, :password_confirmation%>
                <%=password_field :host, :password_confirmation, :class=>"form-control"%>
            </div>
                <%=submit_tag 'Create New Host', :class=>"btn btn-primary"%>
        <%end%>
    </div>
    <div class='col-2'></div>
</div>