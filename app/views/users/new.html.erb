<div class='container row d-flex justify-content-center'>
    <div class='col-2'></div>

    <div class='jumbotron col'>
        <%=form_tag users_path do %>
             <div class ="form-group">
                <%=label :user, :username%>
                <%=text_field :user, :username, :class=>"form-control"%>
            </div>
            <div class ="form-group">
                <%=label :user, :password%>
                <%=password_field :user, :password, :class=>"form-control"%>
            </div>
             <div class ="form-group">
                <%=label :user, :password_confirmation%>
                <%=password_field :user, :password_confirmation, :class=>"form-control"%>
            </div>
        <%=submit_tag 'Create New User', :class=>"btn btn-primary"%>
        <%end%>
    </div>

    <div class='col-2'></div>
</div>